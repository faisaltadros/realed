<div class="search-area mb-4">
    <form action="/campgrounds" method="GET" class="form1" id="campground-search">
        <div class="form-row">
            <div class="col-sm-3">
                <input type="text" name="locationSearch" placeholder="Location" class="search-input ">
            </div>
            <div class="col-sm-3">
