<% include ../partials/header %>

<div class="container">
<div class="row">
    <div class="col-md-4">
        <h1><%= user.firstName + " " +  user.lastName %></h1>
        <div class="thumbnail">
            <img src="<%= user.avatar %>" alt="user profile image">
            <div class="caption"><a href="mailto:<%= user.email %>"><%= user.email %></a></div>
        </div>
        Lorem, ipsum dolor sit amet consectetur adipisicing elit. Cum aliquam esse molestias assumenda nesciunt
        ducimus
        quod a voluptas neque aliquid?
    </div>
    <div class="col-md-8">
        <h3><%= user.username %>'s listings:</h3>
        <ul>
            <% listings.forEach(function(campground) { %>
            <li><a href="/listings/<%= campground.id %>"><%= campground.name %></a></li>
            <% }); %>
        </ul>
    </div>
</div>

