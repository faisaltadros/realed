<% include ../partials/header %>

<div class="row text-center vertical-center">
    <div class="col-md-12">
        <form class="form-signin " action="/listings/<%= campground._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
            <img class="mb-4" src="https://res.cloudinary.com/dfesdiu1m/image/upload/v1555108699/logo_sada.png" alt=""
                width="68.8" height="75.8">
            <h1 class="h3 mb-3 font-weight-normal">Edit "<%= campground.name %>"</h1>
            <div class="form-group">
                <label for="location">Name</label>
                <input class="form-control" type="text" name="campground[name]" value="<%= campground.name %>">
            </div>
            
            <div class="form-group">
                <label for="location">Cost</label>
                <input class="form-control" type="number" name="campground[cost]" value="<%= campground.cost %>"
                    step="0.01" min="0" required>
            </div>
            <div class="form-group">
                <label for="location">Location</label>
                <input class="form-control" type="text" name="location" id="location"
                    value="<%= campground.location %>">
            </div>

            <div class=" row">
                <div class="col-sm-6 pr-0 rooms">
                    <label for="location">Rooms</label>
                    <input class="form-control form-inline mb-3" type="number" name="campground[rooms]"
                        value="<%= campground.rooms %>" step="1" min="0" required>
                </div>
                <div class="col-sm-6 pl-0 baths">
                    <label for="location">Bathrooms</label>
                    <input class="form-control form-inline mb-3" type="number" name="campground[baths]"
                        value="<%= campground.baths %>" step="0.5" min="0" required>
                </div>
            </div>

            <label for="location">Meters</label>
            <input class="form-control mb-3" type="number" name="campground[meters]" value="<%= campground.meters %>"
                step="1" min="0" required>

            <div class="form-group">
                <label for="location">Description</label>
                <input class="form-control mb-4" type="text" name="campground[description]"
                    value="<%= campground.description %>">
            </div>

            <label for="file-upload" class="custom-file-upload">
                <i class="fa fa-cloud-upload "></i> Upload Image
            </label>
            <input id="file-upload" type="file" id="image" name="image" accept="image/*" required />

            <div class="form-group mt-3">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href="/listings">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>